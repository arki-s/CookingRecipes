@model CookingRecipes.Models.Review

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @{
                    DateTime date = DateTime.Now;
                }
                <input asp-for="Date" class="form-control" type="hidden" value="@date.ToString()" />
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <br>
                <input asp-for="Rating"  type="radio" value="1"/> 1
                <input asp-for="Rating"  type="radio" value="2" /> 2
                <input asp-for="Rating"  type="radio" value="3" checked/> 3
                <input asp-for="Rating"  type="radio" value="4" /> 4
                <input asp-for="Rating"  type="radio" value="5" /> 5

               
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeId" class="control-label"></label>
                <select asp-for="RecipeId" class ="form-control" asp-items="ViewBag.RecipeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
