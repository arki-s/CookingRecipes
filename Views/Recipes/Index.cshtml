@model IEnumerable<CookingRecipes.Models.Recipe>

@{
    ViewData["Title"] = "Index";
}

<div class="container-create">
    <div class="create-header">
        <h1>Your Recipes</h1>

        <a class="btn btn-success" asp-action="Create">Add New Recipe</a>
        </div>
        <div class="recipe-cards">
            @foreach (var item in Model)
            {
                <div class="recipe-card">
                <a asp-action="Details" asp-route-id="@item.Id" class="text-center">@Html.DisplayFor(modelItem => item.Name)</a>
                    <p class="text-center fw-bold">Total Time: @Html.DisplayFor(modelItem => item.Time) m</p>
                    <p class="desc">@Html.DisplayFor(modelItem => item.Description)</p>
                </div>
            }
        </div>
    </div>
