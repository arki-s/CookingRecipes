@model CookingRecipes.Models.Recipe

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3 class="text-danger">Are you sure you want to delete this?</h3>

<div class="container-recipe">
    <h1>@Html.DisplayFor(model => model.Name)</h1>
    <p>Total Time : @Html.DisplayFor(model => model.Time) m</p>
    <p style="font-size:24px;">@Html.DisplayFor(model => model.Description)</p>
    <p class="fw-bold">@Html.DisplayNameFor(model => model.Ingredients)</p>
    <p>@Html.DisplayFor(model => model.Ingredients)</p>
    <p class="fw-bold">@Html.DisplayNameFor(model => model.Directions)</p>
    <p>@Html.DisplayFor(model => model.Directions)</p>

    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <p></p>
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>

